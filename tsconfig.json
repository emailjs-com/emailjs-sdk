{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "useDefineForClassFields": false,
    "declaration": false,
    "strict": true,
    "noImplicitAny": true,
    "noLib": false,
    "skipLibCheck": true,
    "preserveConstEnums": true,
    "allowUnusedLabels": false,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "sourceMap": false,
    "outDir": "es"
  },
  "include": ["src"]
}
